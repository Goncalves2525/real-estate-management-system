@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false
skinparam classAttributeIconSize 0
hide circle
hide methods

title Domain Model

class Client{
    name
    citizenCardNumber
    taxNumber
    address
    email
    telephoneNumber
}

class PropertyOwner extends Client {
    properties
}

class Employee{
    name
    citizenCardNumber
    taxNumber
    address
    email
    telephoneNumber
}

class Agent extends Employee{
    agency
}

