class Property{
    typeOfBusiness
    typeOfProperty
    area
    location
    distanceFromCenter
    price
    photos
}

class Apartment extends Property{
    numberOfBedrooms
    numberOfBathrooms
    numberOfParkingSpaces
    availableEquipment
}

class House extends Property{
    numberOfBedrooms
    numberOfBathrooms
    numberOfParkingSpaces
    availableEquipment
    basement
    inhabitableLoft
    sunExposure
}

class PublishedProperty extends Property{
    publishedDate
    publishedBy
    commission
}

class Land extends Property{
    typeOfLand
}

Agent "1" -- "1" PropertyOwner : contacted by
