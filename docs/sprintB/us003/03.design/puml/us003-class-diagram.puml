@startuml
skinparam packageStyle rectangle
skinparam shadowing false
skinparam linetype polyline
skinparam classAttributeIconSize 0

class ApplicationSession {
    + static getInstance()
    + getCurrentSession()
}

class UserSession {
    + getUserEmail()
}

class RegisterNewEmployeeController {
    + createEmployee(name, passportCardNumber, taxNumber, email, \ntelephoneNumber, doorNumber, zipCode, state, city, district, street)
}

class UserRepository {
    + addEmployee(employee)
}

class Repositories {
    - Repositories()
    + getInstance() : Repositories
    + getUserRepository() : UserRepository
}

ApplicationSession -down-> ApplicationSession : instance
Repositories -down-> Repositories : instance

class RegisterNewEmployeeUI {
}

RegisterNewEmployeeUI ..> RegisterNewEmployeeController

RegisterNewEmployeeController ..> Repositories : repositories

Repositories --> "1" UserRepository

UserRepository --> "*" Employee

